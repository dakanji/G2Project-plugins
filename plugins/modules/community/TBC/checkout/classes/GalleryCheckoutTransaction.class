		if ($flagDownloaded) {
			$this->timeDownloaded = 0;
		} else {
			$this->timeDownloaded = time();
		}
	}

	public function getDownloadAttempts() {
		return $this->downloadAttempts;
	}

	public function setDownloadAttempts($numAttempts) {
		$this->downloadAttempts = $numAttempts;
	}
}
