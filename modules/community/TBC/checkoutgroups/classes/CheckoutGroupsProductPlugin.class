/**
 * @package CheckoutGroups
 * @version $Revision: 1644 $
 * @subpackage Classes
 * @author Alec Myers <alec@alecmyers.com>
 */class CheckoutGroupsProductPlugin extends CheckoutProductListInterface_1_0 {
	public function adjustProductList(&$products) {
		global $gallery;

		// do nothing if anonymous user
		list($ret, $anon) = GalleryCoreApi::isAnonymousUser();

		if ($ret) {
			return $ret;
		}

		if ($anon) {
			return null;
		}

		$thisUserId = $gallery->getActiveUserId();
		// make visible according to group membership
		foreach ($products as $position => $product) {
			if (isset($product['groupVisibleId'])) {
				list($ret, $inGroup) = GalleryCoreApi::isUserInGroup($thisUserId, $product['groupVisibleId']);

				if ($ret) {
					return $ret;
				}

				if ($inGroup) {
					$products[$position]['visible'] = 'true';
				}
			}
		}

		return null;
	}
}
