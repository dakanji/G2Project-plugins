/**
 * MultiLangSiteAdmin controller tests
 *
 * @package MultiLang
 * @subpackage PHPUnit
 * @author Alan Harder <alan.harder@sun.com>
 * @version $Revision: 17580 $
 */
class MultiLangSiteAdminControllerTest extends GalleryControllerTestCase {
	public function __construct($methodName) {
		parent::__construct($methodName, 'multilang.MultiLangSiteAdmin');
	}

	public function setUp() {
		$ret = parent::setUp();

		if ($ret) {
			return $ret;
		}

		$ret = $this->_markPluginParametersForCleanup('module', 'multilang');

		if ($ret) {
			return $ret;
		}
	}

	public function testMultiLangSiteAdminControllerReset() {
		GalleryUtilities::putRequestVariable('form[action][reset]', '1');

		$results = $this->handleRequest();
		$this->assertEquals(
			array(
				'redirect' => array(
					'view'    => 'core.SiteAdmin',
					'subView' => 'multilang.MultiLangSiteAdmin',
				),
				'status'   => array(),
				'error'    => array(),
			),
			$results
		);
	}

	public function testMultiLangSiteAdminControllerSave() {
		GalleryUtilities::putRequestVariable('form[languages][0]', 'de_DE');
		GalleryUtilities::putRequestVariable('form[languages][1]', 'he_IL');
		GalleryUtilities::putRequestVariable('form[languages][2]', 'zh_CN');
		GalleryUtilities::putRequestVariable('form[action][save]', '1');

		$results = $this->handleRequest();
		$this->assertEquals(
			array(
				'redirect' => array(
					'view'    => 'core.SiteAdmin',
					'subView' => 'multilang.MultiLangSiteAdmin',
				),
				'status'   => array(
					'saved' => 1,
				),
				'error'    => array(),
			),
			$results
		);

		list($ret, $languages) = GalleryCoreApi::getPluginParameter('module', 'multilang', 'languages');

		if ($ret) {
			return $ret;
		}
		$this->assertEquals('de_DE|he_IL|zh_CN', $languages, 'languages');
	}

	public function testMultiLangSiteAdminControllerSaveNoLanguages() {
		GalleryUtilities::putRequestVariable('form[action][save]', '1');

		$results = $this->handleRequest();
		$this->assertEquals(
			array(
				'redirect' => array(
					'view'    => 'core.SiteAdmin',
					'subView' => 'multilang.MultiLangSiteAdmin',
				),
				'status'   => array(
					'saved' => 1,
				),
				'error'    => array(),
			),
			$results
		);

		list($ret, $languages) = GalleryCoreApi::getPluginParameter('module', 'multilang', 'languages');

		if ($ret) {
			return $ret;
		}
		$this->assertEquals('', $languages, 'languages');
	}
}
