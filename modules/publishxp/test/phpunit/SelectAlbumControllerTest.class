/**
 * SelectAlbum controller tests
 * @package PublishXp
 * @subpackage PHPUnit
 * @author Bharat Mediratta <bharat@menalto.com>
 * @version $Revision: 17580 $
 */
class SelectAlbumControllerTest extends GalleryControllerTestCase {
	public function __construct($methodName) {
		parent::__construct($methodName, 'publishxp.SelectAlbum');
	}

	public function testNewAlbum() {
		GalleryUtilities::putRequestVariable('form[action][newAlbum]', 1);
		GalleryUtilities::putRequestVariable('form[albumId]', 1);

		$result = $this->handleRequest();
		$this->assertEquals(
			array(
				'redirect' => array(
					'view'     => 'publishxp.NewAlbum',
					'parentId' => 1,
				),
				'status'   => array(),
				'error'    => array(),
			),
			$result
		);
	}

	public function testNewAlbumMissingAlbumId() {
		GalleryUtilities::putRequestVariable('form[action][newAlbum]', 1);

		$result = $this->handleRequest();
		$this->assertEquals(
			array(
				'delegate' => array(
					'view' => 'publishxp.SelectAlbum',
				),
				'status'   => array(),
				'error'    => array('form[error][albumId][missing]'),
			),
			$result
		);
	}

	public function testSelect() {
		GalleryUtilities::putRequestVariable('form[action][select]', 1);
		GalleryUtilities::putRequestVariable('form[albumId]', 1);

		$result = $this->handleRequest();
		$this->assertEquals(
			array(
				'redirect' => array(
					'view'    => 'publishxp.Options',
					'albumId' => 1,
				),
				'status'   => array(),
				'error'    => array(),
			),
			$result
		);
	}

	public function testSelectMissingAlbumId() {
		GalleryUtilities::putRequestVariable('form[action][select]', 1);

		$result = $this->handleRequest();
		$this->assertEquals(
			array(
				'delegate' => array(
					'view' => 'publishxp.SelectAlbum',
				),
				'status'   => array(),
				'error'    => array('form[error][albumId][missing]'),
			),
			$result
		);
	}
}
