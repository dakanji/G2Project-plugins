/**
 * Test ColorPackInterface functionality
 *
 * @package ColorPack
 * @subpackage PHPUnit
 * @author Alan Harder <alan.harder@sun.com>
 * @version $Revision: 17580 $
 */
class ColorPackTest extends GalleryTestCase {
	public function __construct($methodName) {
		parent::__construct($methodName);
	}

	public function setUp() {
		$ret = parent::setUp();

		if ($ret) {
			return $ret;
		}

		list($ret, $this->_colorpack) = GalleryCoreApi::newFactoryInstance('ColorPackInterface_1_0', 'ColorPackImpl');

		if ($ret) {
			return $ret;
		}

		if (!isset($this->_colorpack)) {
			echo 'Missing ColorPackImpl';

			return GalleryCoreApi::error(ERROR_MISSING_OBJECT);
		}
	}

	public function testColorPackList() {
		list($ret, $list) = $this->_colorpack->getColorPacks();

		if ($ret) {
			return $ret;
		}
		$this->assert(isset($list[''], $list['blue']), 'Should have "" and "blue" keys');
	}

	public function testColorPackSelect() {
		$template = new ColorPackDummyGalleryTemplate();
		$ret      = $this->_colorpack->selectColorPack($template, 'blue');

		if ($ret) {
			return $ret;
		}
		$this->assertEquals(array('modules/colorpack/packs/blue/color.css'), $template->style);
	}
}

/**
 * @package ColorPack
 * @subpackage PHPUnit
 */
class ColorPackDummyGalleryTemplate {
	public $style = array();

	public function style($tpl) {
		$this->style[] = $tpl;
	}
}
